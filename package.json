{
    "name": "server",
    "version": "1.0.0",
    "private": true,
    "license": "MIT",
    "main": "index.ts",
    "scripts": {
        "prebuild": "yarn codegen",
        "build": "tsc",
        "codegen": "graphql-codegen",
        "format": "prettier \"**/*.ts\" --write",
        "loadtest": "yarn artillery run artillery.yml > loadtest.log",
        "loadtest:limit": "mkdir logs && yarn artillery run artillery-limit.yml > loadtest.log",
        "prod": "node dist/index.js",
        "prestart": "yarn codegen",
        "start": "ts-node index.ts",
        "test": "jest --runInBand --forceExit"
    },
    "jest": {
        "transform": {
            "^.+\\.(js|jsx|ts|tsx)$": "<rootDir>/node_modules/ts-jest"
        }
    },
    "dependencies": {
        "@graphql-modules/core": "^0.7.17",
        "@graphql-modules/di": "^0.7.17",
        "@safe-api/middleware": "^0.0.2",
        "apollo-datasource-rest": "^0.9.5",
        "apollo-server-express": "^2.19.0",
        "axios": "^0.21.0",
        "bcrypt": "^5.0.0",
        "cookie": "^0.4.1",
        "cookie-parser": "^1.4.5",
        "cors": "^2.8.5",
        "dataloader": "^2.0.0",
        "date-fns": "^2.16.1",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "faker": "^5.1.0",
        "graphql": "^15.4.0",
        "graphql-import": "^1.0.2",
        "graphql-postgres-subscriptions": "^1.0.5",
        "graphql-scalars": "^1.4.1",
        "graphql-tools": "^7.0.1",
        "jsonwebtoken": "^9.0.0",
        "lodash": "^4.17.20",
        "pg": "^8.5.1",
        "reflect-metadata": "^0.1.13",
        "sql-template-strings": "^2.2.2"
    },
    "devDependencies": {
        "@graphql-codegen/cli": "^1.19.1",
        "@graphql-codegen/typescript": "^1.17.11",
        "@graphql-codegen/typescript-resolvers": "^1.17.10",
        "@types/axios": "^0.14.0",
        "@types/bcrypt": "^3.0.0",
        "@types/cookie": "^0.4.0",
        "@types/cookie-parser": "^1.4.2",
        "@types/cors": "^2.8.8",
        "@types/express": "^4.17.8",
        "@types/faker": "^5.1.4",
        "@types/graphql": "^14.5.0",
        "@types/jest": "^26.0.15",
        "@types/jsonwebtoken": "^8.5.0",
        "@types/lodash": "^4.14.165",
        "@types/node": "^14.14.7",
        "@types/pg": "^7.14.6",
        "apollo-server-testing": "^2.19.0",
        "artillery": "^1.6.1",
        "jest": "^26.6.3",
        "prettier": "^2.1.2",
        "ts-jest": "^26.4.4",
        "ts-node": "^9.0.0",
        "typescript": "^4.0.5"
    },
    "engines": {
        "node": "^10 || ^12 || >=14"
    }
}
